<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="plone">
  <body>
    <metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core"
    tal:define="templateId template/getId;">
  <metal:block define-macro="tiles-slot">
    <div class="tilesWrapper">
      <div class="actionsTiles">  
        <a tal:attributes="href string:${context/absolute_url}/@@add-tile"
           class="pat-plone-modal plone-btn plone-btn-primary add-tile-btn"
           data-pat-modal='{"actionOptions": {"displayInModal": true}}'>
          <span>Add new tile</span>
        </a>
      </div>
      <div class="tilesList">
        <div tal:define="tiles view/get_tiles_list"
             class="tilesListContent pat-sortable"
             tal:attributes="data-absoluteurl context/absolute_url">
          <tal:tile repeat="tile tiles">
            <div tal:attributes="data-tile tile/view_url" />
          </tal:tile>
        </div>
      </div>
    </div>
  </metal:block>
</metal:block>
</metal:content-core>
  </body>

</html>
